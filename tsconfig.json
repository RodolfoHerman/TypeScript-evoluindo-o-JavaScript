{
    "compilerOptions": {
        "target": "es6",
        "outDir": "app/js",
        "noEmitOnError": true,
        "noImplicitAny": true,
        //Carregador de MODULOS
        "module": "system",
        //Uma boa prática de programação é não permitir valores UNDEFINED e NULL
        "strictNullChecks": true,
        "experimentalDecorators": true
    },
    "include": [
        "app/ts/**/*"
    ]
}